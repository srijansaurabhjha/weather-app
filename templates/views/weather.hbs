<!DOCTYPE html>
<html lang="en">
  <head>
     {{>headlink}}
  </head>
  <body>
    {{>navbar}}

    <!-- main container -->

    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
               <div class="search_content">
                   <form class="search_form">
                       <input type="text" id="cityName" placeholder="Enter the city name" autocomplete="off"/>
                       <input type="submit" value="search" id="submitBtn"/>
                   </form>
               </div>

               <div class="weatherinfo">
                   <div class="top_layer">
                    <p id="day"></p>
                    <p id="date"></p>
                   </div>
                   <div class="weatherinfo_main">
                        <p id="city_name">see the weather</p>
                        <div class="low_layer data_hide">
                            <p id="temp"><span id="temp_val">50</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                   </div>
               </div>
        </div>
      </div>
    </div>

    <!-- footer -->
    {{>footer}}

    <script src="js/index.js"></script>
  </body>
</html>
